<robot name="online_slam_3d">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>

  <!-- LiDAR -->
  <link name="velodyne">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <cylinder length="0.0717" radius="0.05165" />
      </geometry>
      <material name="blue" />
    </visual>
  </link>

  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.0315 0.028 0.013" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <!-- pixhawk -->
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.044 0.0848 0.0124" />
      </geometry>
      <material name="gray" />
    </visual>
  </link>

  <!-- LiDAR to pixhawk -->
  <joint name="LiDAR_to_imu" type="fixed">
    <parent link="imu_link" />
    <child link="velodyne" />
    <origin xyz="0.0 0.0 0.17" rpy="0. 0. 0." />
  </joint>
  
</robot>
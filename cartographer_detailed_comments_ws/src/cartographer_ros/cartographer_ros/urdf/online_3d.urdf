<robot name="online_slam_3d">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>
  <material name="black">
    <color rgba="0.0 0.0 0.0 1" />
  </material>

  <!-- LiDAR -->
  <link name="velodyne">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <cylinder length="0.0717" radius="0.05165" />
      </geometry>
      <material name="blue" />
    </visual>
  </link>

  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.0315 0.028 0.013" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <!-- camera -->
  <link name="camera_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.090 0.025 0.025" />
      </geometry>
      <material name="gray" />
    </visual>
  </link>

  <!-- pixhawk -->
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.044 0.0848 0.0124" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <!-- LiDAR to pixhawk -->
  <joint name="LiDAR_to_pixhawk" type="fixed">
    <parent link="base_link" />
    <child link="velodyne" />
    <origin xyz="0.0 0.0 0.17" rpy="0. 0. 0." /> <!-- need to measure !!! -->
  </joint>

  <!-- imu to pixhawk -->
  <joint name="imu_to_pixhawk" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0.0 0.0 0.06" rpy="0. 0. 0" /> <!-- need to measure !!! -->
  </joint>

  <!-- camera to pixhawk -->
  <joint name="camera_to_pixhawk" type="fixed">
    <parent link="base_link" />
    <child link="camera_link" />
    <origin xyz="0.0 0.0 0.06" rpy="0. 0. 0" /> <!-- need to measure !!! -->
  </joint>

</robot>